<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">


    <Style x:Key="TitleTabControlStyle" TargetType="TabControl">
        <Setter Property="VerticalAlignment" Value="Stretch"/>
        <Setter Property="Margin" Value="20,0,0,0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type TabControl}">
                    <Grid VerticalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="0"/>
                        </Grid.RowDefinitions>

                        <StackPanel IsItemsHost="True"
                                    Grid.Row="0"
                                    Background="Transparent"
                                    Orientation="Horizontal"
                                    SnapsToDevicePixels="True">
                        </StackPanel>

                        <ContentPresenter
                            Grid.Row="1"
                            Margin="0,0,0,0"
                            Content="{TemplateBinding SelectedContent}"/>
                    </Grid>

                    <ControlTemplate.Resources>
                        <Style TargetType="{x:Type TabItem}">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="{x:Type TabItem}">
                                        <Grid  Name="gridBackground" VerticalAlignment="Center" Margin="20,0,20,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="30"/>
                                            </Grid.ColumnDefinitions>

                                            <ContentPresenter>
                                                <ContentPresenter.Content>
                                                    <TextBlock Name="tbk" Text="{TemplateBinding Header}"  FontFamily="Calibri" FontSize="14" Foreground="AliceBlue" 
                                                               VerticalAlignment="Center" HorizontalAlignment="Center"/>
                                                </ContentPresenter.Content>
                                            </ContentPresenter>

                                            <Path Grid.Column="1" Stroke="AliceBlue" StrokeThickness="2" Data="M0,2 L0,20" 
                                                  HorizontalAlignment="Center" VerticalAlignment="Center">
                                            </Path>
                                        </Grid>
                                    <ControlTemplate.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="tbk" Property="Foreground">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#878787"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="tbk" Property="Foreground">
                                                    <Setter.Value>
                                                        <SolidColorBrush Color="#FF7F44"/>
                                                    </Setter.Value>
                                                </Setter>
                                            </Trigger>

                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter TargetName="tbk" Property="Foreground" Value="DarkGray"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ControlTemplate.Resources>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>